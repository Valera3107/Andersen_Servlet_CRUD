<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- get -->

  <servlet>
    <servlet-name>TaskServlet</servlet-name>
    <servlet-class>ua.com.servlet.TaskServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TaskServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- update -->

  <servlet>
    <servlet-name>UpdateTaskServlet</servlet-name>
    <servlet-class>ua.com.servlet.UpdateTaskServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateTaskServlet</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>


  <!--  delete -->

  <servlet>
    <servlet-name>DeleteTaskServlet</servlet-name>
    <servlet-class>ua.com.servlet.DeleteTaskServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeleteTaskServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>

<!--  add -->

  <servlet>
    <servlet-name>AddTaskServlet</servlet-name>
    <servlet-class>ua.com.servlet.AddTaskServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddTaskServlet</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

</web-app>
